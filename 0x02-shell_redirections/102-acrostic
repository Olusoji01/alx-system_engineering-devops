#!/bin/bash

# Check if a file is provided as an argument
if [ $# -ne 1 ]; then
    echo "Usage: $0 <acrostic_file>"
    exit 1
fi

acrostic_file="$1"

# Check if the file exists
if [ ! -e "$acrostic_file" ]; then
    echo "File not found: $acrostic_file"
    exit 1
fi

decoded_message=""

# Read each line of the file and extract the first character
while IFS= read -r line; do
    first_char="${line:0:1}"  # Extract the first character of the line
    decoded_message="${decoded_message}${first_char}"  # Append it to the decoded message
done < "$acrostic_file"

# Add a newline at the end of the decoded message
decoded_message="${decoded_message}$'\n'"

echo "Decoded Message:"
echo "$decoded_message"
